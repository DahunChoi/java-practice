+package com.example.javabasicsapi.service;
+
+import com.example.javabasicsapi.domain.User;
+import com.example.javabasicsapi.dto.UserCreateRequest;
+import com.example.javabasicsapi.dto.UserResponse;
+import com.example.javabasicsapi.repository.UserRepository;
+import org.springframework.stereotype.Service;
+
+import java.util.List;
+import java.util.Optional;
+import java.util.concurrent.atomic.AtomicLong;
+import java.util.function.Predicate;
+
+@Service
+public class UserService {
+    private final UserRepository userRepository;
+    private final AtomicLong seq = new AtomicLong(0);
+
+    public UserService(UserRepository userRepository) {
+        this.userRepository = userRepository;
+    }
+
+    public UserResponse create(UserCreateRequest req) {
+        Long id = seq.incrementAndGet();
+        User user = new User(id, req.getName(), req.getAge());
+        userRepository.save(id, user);
+        return UserResponse.from(user);
+    }
+
+    // 단건 조회
+    public UserResponse get(Long id) {
+        User user = userRepository.findById(id)
+                .orElseThrow(() -> new IllegalArgumentException("User not found: " + id));
+        return UserResponse.from(user);
+    }
+
+    // 전체 조회
+    public List<UserResponse> getAll() {
+        return userRepository.findAll().stream()
+                .map(UserResponse::from)
+                .toList();
+    }
+
+    // 검색
+    public List<UserResponse> search(String nameContains, Integer minAge, Integer maxAge) {
+        Predicate<User> p = user -> true;
+
+        if (nameContains != null && !nameContains.isBlank()) {
+            p = p.and(u -> u.getName().toLowerCase().contains(nameContains.toLowerCase()));
+        }
+
+        if (minAge != null) {
+            p = p.and(u -> u.getAge() >= minAge);
+        }
+
+        if (maxAge != null) {
+            p = p.and(u -> u.getAge() <= maxAge);
+        }
+
+        return userRepository.findBy(p).stream()
+                .map(UserResponse::from)
+                .toList();
+    }
+
+    public void delete(Long id) {
+        // Optional로 존재 확인 후 삭제
+        userRepository.findById(id)
+                .orElseThrow(() -> new IllegalArgumentException("User not found: " + id));
+        userRepository.delete(id);
+    }
+
+    public Optional<UserResponse> getOptional(Long id) {
+        return userRepository.findById(id).map(UserResponse::from);
+    }
+}
