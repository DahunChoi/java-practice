+package com.example.javabasicsapi.repository;
+
+import java.util.*;
+import java.util.concurrent.ConcurrentHashMap;
+import java.util.function.Predicate;
+
+public class MemoryRepository<T> {
+    private final Map<Long, T> store = new ConcurrentHashMap<>();
+
+    public void save(Long id, T entity) {
+        store.put(id, entity);
+    }
+
+    public Optional<T> findById(Long id) {
+        return Optional.ofNullable(store.get(id));
+    }
+
+    public List<T> findAll() {
+        return new ArrayList<>(store.values());
+    }
+
+    public List<T> findBy(Predicate<T> condition) {
+        return store.values().stream()
+                .filter(condition)
+                .toList();
+    }
+
+    public void delete(Long id) {
+        store.remove(id);
+    }
+}
